[
    {
        "name": "overlayTextOnImage",
        "description": "Overlay text onto an image and save the result.",
        "parameters": {
            "type": "object",
            "properties": {
                "image_path": {
                    "type": "string",
                    "description": "Path to the image file to process."
                },
                "text": {
                    "type": "string",
                    "description": "Text to overlay onto the image."
                },
                "font_path": {
                    "type": "string",
                    "description": "Path to the font file (default: arial.ttf)",
                    "default": "arial.ttf"
                },
                "font_size": {
                    "type": "integer",
                    "description": "Font size (default: 40)",
                    "default": 40
                },
                "text_color": {
                    "type": "array",
                    "items": {"type": "integer"},
                    "description": "Text color in RGB, e.g. [0,0,0] for black",
                    "default": [0,0,0]
                },
                "bg_color": {
                    "type": "array",
                    "items": {"type": "integer"},
                    "description": "Background color in RGBA, e.g. [255,255,255,230]",
                    "default": [255,255,255,230]
                },
                "with_bg": {
                    "type": "boolean",
                    "description": "Whether to show a background behind the text (default: false)",
                    "default": false
                },
                "align": {
                    "type": "string",
                    "enum": ["left", "center", "right"],
                    "description": "Text alignment per line (default: center)",
                    "default": "center"
                },
                "position": {
                    "type": "string",
                    "enum": ["top_left","top_center","top_right","center_left","center","center_right","bottom_left","bottom_center","bottom_right"],
                    "description": "Text block position (default: center)",
                    "default": "center"
                },
                "output_path": {
                    "type": "string",
                    "description": "Output file path (optional)"
                }
            },
            "required": ["image_path", "text"]
        }
    }
]
